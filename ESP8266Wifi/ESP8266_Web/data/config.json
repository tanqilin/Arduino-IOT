<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <title>ESP8266</title>
  <link rel="stylesheet" href="/layui/css/layer.css">
  <link rel="stylesheet" href="/layui/css/layui.css">
</head>
<body>
 
 <div class="layui-fluid">
  <div class="layui-row">
    <div class="layui-col-sm6 layui-col-sm-offset3">
		<fieldset class="layui-elem-field layui-field-title" style="margin-top: 30px;">
			<legend>配置ESP连接信息</legend>
		</fieldset>
		<form class="layui-form" action="">
			<div class="layui-form-item">
				<label class="layui-form-label">请输入SSID：</label>
				<div class="layui-input-block">
				  <input type="text" name="ssid" lay-verify="required" lay-reqtext="SSID是必填项" autocomplete="off" placeholder="SSID" class="layui-input">
				</div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label">输入Password:</label>
				<div class="layui-input-block">
				  <input type="text" name="password" placeholder="Password" autocomplete="off" class="layui-input">
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-input-block">
				  <button type="submit" class="layui-btn layui-btn-fluid" lay-submit="" lay-filter="submitBtn">立即提交</button>
				</div>
			</div>
		</form>
    </div>
  </div>
</div>

<!-- 你的 HTML 代码 -->
 
<script src="/layui/layui.js"></script>
<script src="/layui/layer.js"></script>
<script>
layui.use(['layer', 'form'], function(){
  var layer = layui.layer
  ,form = layui.form, $=layui.$;
  
    form.on('submit(submitBtn)', function(data){
		console.log(data.field)
		$.post("config",data.field,
		  function(data,status){
			alert("Data: " + data + "\nStatus: " + status);
			layer.msg('success'); 
		  }
		);
		return false;
	});
});
</script> 
</body>
</html>